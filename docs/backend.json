{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user of the VideoCash application.",
      "properties": {
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "name": {
          "type": "string",
          "description": "Full name of the user."
        },
        "balance": {
          "type": "number",
          "description": "Current balance of the user."
        },
        "adsWatchedToday": {
          "type": "number",
          "description": "Number of ads watched today."
        },
        "lastAdReset": {
          "type": [
            "number",
            "null"
          ],
          "description": "Timestamp of the last ad count reset."
        },
        "lastDailyClaim": {
          "type": [
            "string",
            "null"
          ],
          "description": "The date of the last daily bonus claim in yyyy-mm-dd format."
        },
        "referralCode": {
          "type": "string",
          "description": "The user's unique 6-digit referral code."
        },
        "referredBy": {
          "type": [
            "string",
            "null"
          ],
          "description": "The referral code of the user who referred this user."
        },
        "referralsCount": {
          "type": "number",
          "description": "Number of users referred."
        },
        "initialRechargeClaimed": {
          "type": "boolean",
          "description": "Whether the user has claimed their initial mobile recharge bonus."
        }
      },
      "required": [
        "email",
        "name",
        "balance",
        "adsWatchedToday",
        "referralCode",
        "referralsCount"
      ]
    },
    "VideoAd": {
      "title": "VideoAd",
      "type": "object",
      "description": "Represents a video advertisement.",
      "properties": {
        "title": {
          "type": "string",
          "description": "Title of the video ad."
        },
        "reward": {
          "type": "number",
          "description": "Reward amount for watching the video ad."
        },
        "adUrl": {
          "type": "string",
          "description": "URL of the video ad."
        }
      },
      "required": [
        "title",
        "reward",
        "adUrl"
      ]
    },
    "AdminSettings": {
      "title": "AdminSettings",
      "type": "object",
      "description": "Represents global settings configured by the administrator.",
      "properties": {
        "minimumWithdrawal": {
          "type": "number",
          "description": "Minimum amount required for withdrawal."
        },
        "dailyBonus": {
          "type": "number",
          "description": "Amount of the daily login bonus."
        },
        "referralBonus": {
          "type": "number",
          "description": "Bonus amount for a successful referral."
        }
      },
      "required": [
        "minimumWithdrawal",
        "dailyBonus",
        "referralBonus"
      ]
    },
    "WithdrawalRequest": {
      "title": "WithdrawalRequest",
      "type": "object",
      "description": "Represents a user's request for withdrawal or recharge.",
      "properties": {
        "userId": {
          "type": "string"
        },
        "userEmail": {
          "type": "string"
        },
        "amount": {
          "type": "number"
        },
        "type": {
          "type": "string",
          "enum": [
            "Recharge",
            "Withdrawal"
          ]
        },
        "accountNumber": {
          "type": "string",
          "description": "Mobile number for recharge or payment account number."
        },
        "status": {
          "type": "string",
          "enum": [
            "Pending",
            "Completed",
            "Rejected"
          ]
        },
        "createdAt": {
          "type": "number",
          "description": "Timestamp of the request."
        }
      },
      "required": [
        "userId",
        "userEmail",
        "amount",
        "type",
        "accountNumber",
        "status",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "realtimeDatabase": {
    "users": {
      "$userId": {
        "schema": {
          "$ref": "#/backend/entities/User"
        },
        "description": "Stores user profiles."
      }
    },
    "video_ads": {
      "$videoAdId": {
        "schema": {
          "$ref": "#/backend/entities/VideoAd"
        },
        "description": "Stores video advertisements."
      }
    },
    "admin_settings": {
      "schema": {
        "$ref": "#/backend/entities/AdminSettings"
      },
      "description": "Stores global admin settings."
    },
    "withdrawal_requests": {
      "$requestId": {
        "schema": {
          "$ref": "#/backend/entities/WithdrawalRequest"
        },
        "description": "Stores user withdrawal and recharge requests."
      }
    }
  }
}
