{
  "rules": {
    "users": {
      "$userId": {
        ".read": "auth != null && auth.uid === $userId",
        ".write": "auth != null && auth.uid === $userId"
      }
    },
    "video_ads": {
      ".read": true,
      ".write": "root.child('users').child(auth.uid).child('email').val() === 'mdesaalli74@gmail.com'"
    },
    "admin_settings": {
      ".read": true,
      ".write": "root.child('users').child(auth.uid).child('email').val() === 'mdesaalli74@gmail.com'"
    },
    "withdrawal_requests": {
      ".read": "root.child('users').child(auth.uid).child('email').val() === 'mdesaalli74@gmail.com'",
      "$requestId": {
        ".write": "(root.child('users').child(auth.uid).child('email').val() === 'mdesaalli74@gmail.com') || (!data.exists() && newData.child('userId').val() === auth.uid)",
        ".validate": "newData.hasChildren(['userId', 'userEmail', 'amount', 'type', 'accountNumber', 'status', 'createdAt'])"
      }
    }
  }
}
